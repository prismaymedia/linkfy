{
  "manifest_version": 3,
  "name": "Linkfy",
  "version": "1.0.0",
  "description": "Extensi√≥n de Google Chrome para Linkfy - Gestiona tus enlaces de forma inteligente",
  "permissions": ["storage", "activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "dist/popup.html",
    "default_title": "Linkfy"
  }
}

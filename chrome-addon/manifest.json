{
  "manifest_version": 3,
  "name": "Linkfy",
  "version": "1.0.0",
  "description": "Manage your links intelligently",

  "permissions": ["storage", "activeTab", "scripting", "tabs"],

  "host_permissions": [
    "https://linkfy-production.up.railway.app/*",
    "https://music.youtube.com/*",
    "https://www.youtube.com/*",
    "https://youtu.be/*",
    "https://open.spotify.com/*",
    "https://*.deezer.com/*",
    "https://music.apple.com/*",
    "https://itunes.apple.com/*"
  ],

  "content_scripts": [
    {
      "matches": [
        "https://music.youtube.com/*",
        "https://www.youtube.com/*",
        "https://youtu.be/*",
        "https://open.spotify.com/*",
        "https://*.deezer.com/*",
        "https://music.apple.com/*",
        "https://itunes.apple.com/*"
      ],
      "js": ["utils.js", "content.js"],
      "run_at": "document_idle"
    }
  ],

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "action": {
    "default_popup": "dist/popup.html",
    "default_title": "Linkfy",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "background": {
    "service_worker": "background.js"
  },

  "web_accessible_resources": [
    {
      "resources": ["utils.js"],
      "matches": ["<all_urls>"]
    }
  ]
}

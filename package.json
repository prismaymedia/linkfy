{
  "name": "linkfy",
  "version": "2.3.0",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev:client": "npm run dev --workspace=client",
    "build:client": "npm run build --workspace=client",
    "build:extension:client": "npm run build:extension --workspace=client",
    "start:client": "npm run start --workspace=client",
    "deploy:client": "npm run deploy --workspace=client",
    "test:client": "npm run test --workspace=client",
    "dev:server": "npm run nest:dev --workspace=server",
    "build:server": "npm run nest:build --workspace=server",
    "start:server": "npm run nest:start --workspace=server",
    "test:server": "npm run nest:test --workspace=server",
    "test:e2e:server": "npm run nest:test:e2e --workspace=server",
    "lint": "npm run lint --workspaces --if-present",
    "prettier:format": "prettier --write \"**/*.{ts,tsx,js,jsx,md,mdx,css,scss,json,yaml,yml}\"",
    "diagrams:generate": "mkdir -p assets && mmdc -i docs/architecture.mmd -o assets/architecture.png -w 1200 -H 800 --backgroundColor white",
    "diagrams:install": "npm install -g @mermaid-js/mermaid-cli",
    "diagrams:generate:ci": "mmdc -i docs/architecture.mmd -o assets/architecture.png -w 1200 -H 800 --backgroundColor white --puppeteerConfig puppeteer-config.json"
  },
  "workspaces": [
    "client",
    "server"
  ],
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.36.0",
    "drizzle-zod": "^0.8.2",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.4.0",
    "prettier": "^3.4.2",
    "typescript": "5.9.2",
    "typescript-eslint": "^8.44.1",
    "zod": "^3.22.2"
  }
}

{
  "dashboard": {
    "title": "Linkfy API - Production Metrics",
    "tags": ["linkfy", "api", "production"],
    "timezone": "browser",
    "editable": true,
    "graphTooltip": 1,
    "panels": [
      {
        "id": 1,
        "title": "Request Rate (req/s)",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        },
        "targets": [
          {
            "expr": "rate(linkfy_http_requests_total[5m])",
            "legendFormat": "{{method}} {{route}} - {{status_code}}"
          }
        ],
        "yaxes": [
          {
            "format": "reqps",
            "label": "Requests/sec"
          }
        ]
      },
      {
        "id": 2,
        "title": "95th Percentile Response Time",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(linkfy_http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "{{route}}"
          }
        ],
        "yaxes": [
          {
            "format": "s",
            "label": "Duration"
          }
        ]
      },
      {
        "id": 3,
        "title": "External API Success Rate",
        "type": "stat",
        "gridPos": {
          "h": 6,
          "w": 8,
          "x": 0,
          "y": 8
        },
        "targets": [
          {
            "expr": "rate(linkfy_external_api_calls_total{status=\"success\"}[5m]) / rate(linkfy_external_api_calls_total[5m]) * 100"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "red" },
                { "value": 90, "color": "yellow" },
                { "value": 95, "color": "green" }
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Link Conversions by Platform",
        "type": "bargauge",
        "gridPos": {
          "h": 6,
          "w": 16,
          "x": 8,
          "y": 8
        },
        "targets": [
          {
            "expr": "sum by (source_platform, target_platform) (rate(linkfy_link_conversions_total{success=\"true\"}[5m]))"
          }
        ],
        "options": {
          "orientation": "horizontal",
          "displayMode": "gradient"
        }
      },
      {
        "id": 5,
        "title": "Error Rate by Endpoint",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 14
        },
        "targets": [
          {
            "expr": "rate(linkfy_http_requests_total{status_code=~\"5..\"}[5m])",
            "legendFormat": "{{route}} - {{status_code}}"
          }
        ],
        "alert": {
          "name": "High Error Rate",
          "conditions": [
            {
              "evaluator": {
                "type": "gt",
                "params": [0.05]
              },
              "operator": {
                "type": "and"
              },
              "query": {
                "params": ["A", "5m", "now"]
              },
              "type": "query"
            }
          ]
        }
      },
      {
        "id": 6,
        "title": "Public API Usage (Monetization)",
        "type": "table",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 14
        },
        "targets": [
          {
            "expr": "sum by (endpoint, plan_tier) (increase(linkfy_api_endpoint_usage_total[1h]))",
            "format": "table",
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "Time": true
              },
              "indexByName": {
                "endpoint": 0,
                "plan_tier": 1,
                "Value": 2
              },
              "renameByName": {
                "endpoint": "Endpoint",
                "plan_tier": "Plan Tier",
                "Value": "Requests (1h)"
              }
            }
          }
        ]
      },
      {
        "id": 7,
        "title": "Memory Usage",
        "type": "graph",
        "gridPos": {
          "h": 6,
          "w": 12,
          "x": 0,
          "y": 22
        },
        "targets": [
          {
            "expr": "process_resident_memory_bytes{app=\"linkfy-api\"}",
            "legendFormat": "Memory Usage"
          }
        ],
        "yaxes": [
          {
            "format": "bytes"
          }
        ]
      },
      {
        "id": 8,
        "title": "CPU Usage",
        "type": "graph",
        "gridPos": {
          "h": 6,
          "w": 12,
          "x": 12,
          "y": 22
        },
        "targets": [
          {
            "expr": "rate(process_cpu_seconds_total{app=\"linkfy-api\"}[5m]) * 100",
            "legendFormat": "CPU %"
          }
        ],
        "yaxes": [
          {
            "format": "percent"
          }
        ]
      }
    ],
    "refresh": "30s",
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["10s", "30s", "1m", "5m", "15m", "30m", "1h"]
    }
  }
}

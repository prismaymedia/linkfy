{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "rootDir": "./src",
  "moduleFileExtensions": ["ts", "js", "json"],
  "testRegex": ".*\\.e2e-spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "silent": false,
  "transformIgnorePatterns": [
    "node_modules/(?!(@paralleldrive/cuid2|formidable|supertest|superagent|@noble/hashes)/)"
  ],
  "moduleNameMapper": {
    "^(\\.{1,2}/.*)\\.js$": "$1"
  }
}
